---
import '@fontsource-variable/inter';

// 'DM Sans'
// Nunito
// Dosis
// Outfit
// Roboto
// Literata
// 'IBM Plex Sans'
// Karla
// Poppins
// 'Fira Sans'
// 'Libre Franklin'
// Inconsolata
// Raleway
// Oswald
// 'Space Grotesk'
// Urbanist
---

<style is:inline>
  :root {
    --aw-font-sans: 'Inter Variable';
    --aw-font-serif: 'Inter Variable';
    --aw-font-heading: 'Inter Variable';

    --aw-color-primary: rgb(67 110 50);
    --aw-color-secondary: rgb(117 49 145);
    --aw-color-accent: rgb(245 113 5);

    --aw-color-text-heading: rgb(67 110 50);
    --aw-color-text-default: rgb(46 31 30);
    --aw-color-text-muted: rgb(46 31 30);
    --aw-color-bg-page: rgb(245 236 235);

    --aw-color-bg-page-dark: rgb(245 236 235);

    ::selection {
      background-color: lavender;
    }
  }

  .dark {
    --aw-font-sans: 'Inter Variable';
    --aw-font-serif: 'Inter Variable';
    --aw-font-heading: 'Inter Variable';

    --aw-color-primary: rgb(67 110 50);
    --aw-color-secondary: rgb(117 49 145);
    --aw-color-accent: rgb(245 113 5);

    --aw-color-text-heading: rgb(67 110 50);
    --aw-color-text-default: rgb(46 31 30);
    --aw-color-text-muted: rgb(46 31 30);
    --aw-color-bg-page: rgb(245 236 235);

    ::selection {
      background-color: black;
      color: snow;
    }
  }
</style>
